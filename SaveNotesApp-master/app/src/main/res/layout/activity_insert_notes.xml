<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".Activity.InsertNotesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/notesTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:padding="15dp"

        android:background="@drawable/edit_txt_bac"
        android:hint="Title.."
        android:textColorHint="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_txt_bac"
        android:id="@+id/notesSubtitle"
        android:hint="Subtitle.."
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:fontFamily="sans-serif"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:padding="10dp"
            android:background="@drawable/edit_txt_bac"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"/>
        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/red_shape"
            android:id="@+id/redPriority"
            android:layout_margin="10dp"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/yellow_shape"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_done_24"
            android:id="@+id/yellowPriority"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/green_shape"
            android:layout_margin="10dp"
            android:id="@+id/greenPriority"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/pink_shape"
            android:id="@+id/pinkPriority"
            android:layout_margin="10dp"
            android:layout_height="25dp"/>
     </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:padding="15dp"
            android:gravity="start"
            android:id="@+id/notesDate"
            android:background="@drawable/edit_txt_bac"
            android:hint="Notes..."
            android:textColorHint="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"/>



    </LinearLayout>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doneNotesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="26dp"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_baseline_done_24" />

</RelativeLayout>